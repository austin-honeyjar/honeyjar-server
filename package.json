{
  "name": "honeyjar-server",
  "version": "1.0.0",
  "description": "API server for Honeyjar application",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "tsx src/db/migrate.ts",
    "migrate": "npm run db:generate && npm run db:push && npm run db:migrate",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:workflow": "tsx unit-test/workflow.test.ts",
    "test:base-workflow": "tsx unit-test/base-workflow.test.ts",
    "test:base": "tsx unit-test/base.test.ts",
    "test:auth": "tsx unit-test/auth.test.ts",
    "test:workflow-context": "npx tsx scripts/test-workflow-context.ts",
    "migrate:workflow-context": "npx tsx scripts/migrate-workflow-context.ts",
    "reinit:workflow-context": "npx tsx scripts/reinitialize-workflow-context.ts",

    "test:pgvector": "npx tsx scripts/test-pgvector-performance.ts",
    "validate:pgvector": "npx tsx scripts/validate-pgvector-setup.ts",
    "check:env": "npx tsx scripts/check-environment.ts"
  },
  "dependencies": {
    "@clerk/backend": "^1.27.3",
    "@slack/webhook": "^7.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/multer": "^2.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "openai": "^4.95.0",
    "pg": "^8.11.3",
    "pgvector": "^0.2.1",
    "redis": "^5.5.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.16",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.29.3",
    "postgres": "^3.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
