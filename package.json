{
  "name": "honeyjar-server",
  "version": "1.0.0",
  "description": "API server for Honeyjar application",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "NODE_ENV=devlocal nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "test": "NODE_ENV=devlocal jest",
    "test:watch": "NODE_ENV=devlocal jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@clerk/backend": "^1.27.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "drizzle-kit": "^0.20.18",
    "jest": "^29.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
